<Page x:Class="WpfApp14.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Игра">
    <Page.Resources>
        <Style TargetType="Button" x:Key="AnswerButton">
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Вопрос -->
        <TextBlock x:Name="QuestionTextBlock"
                   Grid.Row="0"
                   TextWrapping="Wrap"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
        <!-- Ответы -->
        <StackPanel Grid.Row="1">
            <Button x:Name="AnswerButton1" Style="{StaticResource AnswerButton}" Click="OnAnswer_Click"/>
            <Button x:Name="AnswerButton2" Style="{StaticResource AnswerButton}" Click="OnAnswer_Click"/>
            <Button x:Name="AnswerButton3" Style="{StaticResource AnswerButton}" Click="OnAnswer_Click"/>
            <Button x:Name="AnswerButton4" Style="{StaticResource AnswerButton}" Click="OnAnswer_Click"/>
        </StackPanel>

        <!-- Таймер и кнопка Назад -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Осталось:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock x:Name="TimerTextBlock" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Закончить"
                    Padding="5,2"
                    Click="OnQuit_Click"/>
        </StackPanel>
    </Grid>
</Page>
