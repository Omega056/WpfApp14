<Page x:Class="WpfApp14.StorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Магазин"
      Background="#F5EDE4">
    <Page.Resources>
        <!-- Стиль закруглённой кнопки -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8"
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стили текста товаров -->
        <Style TargetType="TextBlock" x:Key="ItemTitle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ItemPrice">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#777777"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель: Назад + Заголовок -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="← Назад"
              Style="{StaticResource RoundedButton}"
              Click="BackButton_Click"
              HorizontalAlignment="Left"/>
            <TextBlock Grid.Column="1"
                 Text="Магазин"
                 FontSize="20"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"/>
        </Grid>

        <!-- Список товаров -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <!-- Товар: Лампочка -->
            <Border Background="#FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Width="40" Height="40" Margin="0,0,10,0" Grid.Column="0"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Лампочка (Подсказка)" Style="{StaticResource ItemTitle}"/>
                        <TextBlock Text="$1.99" Style="{StaticResource ItemPrice}"/>
                    </StackPanel>
                    <Button Content="Купить"
                  Style="{StaticResource RoundedButton}"
                  Width="80"
                  Grid.Column="2"/>
                </Grid>
            </Border>

            <!-- Товар: 50 на 50 -->
            <Border Background="#FFFFFF" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Width="40" Height="40" Margin="0,0,10,0" Grid.Column="0"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="50 на 50" Style="{StaticResource ItemTitle}"/>
                        <TextBlock Text="$2.49" Style="{StaticResource ItemPrice}"/>
                    </StackPanel>
                    <Button Content="Купить"
                  Style="{StaticResource RoundedButton}"
                  Width="80"
                  Grid.Column="2"/>
                </Grid>
            </Border>

            <!-- Товар: Второй шанс -->
            <Border Background="#FFFFFF" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Image Width="40" Height="40" Margin="0,0,10,0" Grid.Column="0"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Второй шанс" Style="{StaticResource ItemTitle}"/>
                        <TextBlock Text="$3.99" Style="{StaticResource ItemPrice}"/>
                    </StackPanel>
                    <Button Content="Купить"
                  Style="{StaticResource RoundedButton}"
                  Width="80"
                  Grid.Column="2"/>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>