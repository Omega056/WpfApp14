<!-- HomePage.xaml -->
<Page x:Class="WpfApp14.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная"
      Background="#F5EDE4">
    <Page.Resources>
        <!-- Стили кнопок -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="Auto"/>
            <!-- Профиль + ежедневка -->
            <RowDefinition Height="*"/>
            <!-- Нижние кнопки -->
        </Grid.RowDefinitions>

        <!-- 1) Верхняя панель -->
        <Grid Grid.Row="0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Настройки -->
            <Button Grid.Column="0" Background="Transparent" BorderThickness="0" Click="SettingsButton_Click">
                <Image Source="/1486395874-settings_80622.png" Width="30" Height="30"/>
            </Button>
            <TextBlock Grid.Column="1" />
            <!-- Магазин -->
            <Button Grid.Column="2" Background="Transparent" BorderThickness="0" Click="StoreButton_Click">
                <Image Source="/3986728-online-shop-store-store-icon_112980.png" Width="30" Height="30"/>
            </Button>
        </Grid>

        <!-- 2) Профиль + ежедневное испытание -->
        <StackPanel Grid.Row="1" Margin="0,20,0,20">
            <!-- Карточка профиля -->
            <Border CornerRadius="15" Background="#FFFFFF" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Width="60" Height="60" Fill="#E0D7CE"/>
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Студент" FontWeight="Bold" FontSize="16" Foreground="#333333"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="IQ: " FontWeight="SemiBold" Foreground="#555555"/>
                            <TextBlock Text="100" Foreground="#555555"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Правильных ответов: " FontWeight="SemiBold" Foreground="#555555"/>
                            <TextBlock Text="0%" Foreground="#555555"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Ежедневное испытание -->
            <Border CornerRadius="12" Background="#FFFFFF" Padding="10">
                <StackPanel>
                    <TextBlock Text="Ежедневное испытание" FontWeight="Bold" FontSize="14" Foreground="#333333"/>
                    <TextBlock Text="Дойти до: $2,000" FontSize="12" Foreground="#777777" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 3) Нижние кнопки -->
        <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
            <Button x:Name="CreateGameButton"
            Content="Создать игру"
            Style="{StaticResource LargeRoundedButton}"
            Background="#C5C5C5"
            Foreground="#FFFFFF"
            Click="CreateGameButton_Click"
            Margin="0,0,0,10"/>
            <Button x:Name="FindGameButton"
            Content="Найти игру"
            Style="{StaticResource LargeRoundedButton}"
            Background="#4CAF50"
            Foreground="#FFFFFF"
            Click="FindGameButton_Click"/>
        </StackPanel>
    </Grid>
</Page>