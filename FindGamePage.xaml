<Page x:Class="WpfApp14.FindGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Найти игру">
    <!-- Фон страницы -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#DCEFFF" Offset="0"/>
            <GradientStop Color="#F5F8FF" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Стили кнопок -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                Effect="{DynamicResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Тень для всех элементов -->
        <DropShadowEffect x:Key="DropShadow" ShadowDepth="2" BlurRadius="8" Color="#888888"/>
    </Page.Resources>

    <DockPanel Margin="20">
        <!-- Верхняя панель: Назад и Удалить -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="← Назад"
                    Style="{StaticResource RoundedButton}" 
                    Width="80"
                    Click="BackButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Удалить викторину"
                    Style="{StaticResource RoundedButton}"
                    Width="140"
                    Click="DeleteQuizButton_Click"/>
        </StackPanel>

        <!-- Заголовок -->
        <TextBlock Text="Сохранённые викторины"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Кнопка запуска игры -->
        <Button Content="Запустить игру"
                Style="{StaticResource LargeRoundedButton}"
                Background="#6A5ACD"
                Foreground="White"
                Click="StartGameButton_Click"
                Margin="0,0,0,10"/>

        <!-- Список викторин -->
        <Border CornerRadius="10" Background="White" Padding="5" Effect="{DynamicResource DropShadow}" Margin="0,10,0,0">
            <ListView x:Name="QuizzesListView"
                      SelectionMode="Single"
                      SelectionChanged="QuizzesListView_SelectionChanged"
                      BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Вопросов" Width="80" DisplayMemberBinding="{Binding QuestionCount}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </DockPanel>
</Page>