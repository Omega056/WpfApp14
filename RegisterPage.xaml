<Page x:Class="WpfApp14.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#DCEFFF" Offset="0"/>
            <GradientStop Color="#F5F8FF" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                Effect="{DynamicResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                Effect="{DynamicResource DropShadow}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox" x:Key="RoundedPasswordBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                Effect="{DynamicResource DropShadow}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox" x:Key="RoundedCheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <DropShadowEffect x:Key="DropShadow" ShadowDepth="2" BlurRadius="8" Color="#888888"/>
    </Page.Resources>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Имя пользователя" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     Style="{StaticResource RoundedTextBox}" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="Пароль" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Style="{StaticResource RoundedPasswordBox}" 
                         Margin="0,0,0,10"/>
            <TextBox x:Name="PasswordTextBox" 
                     Style="{StaticResource RoundedTextBox}" 
                     Margin="0,0,0,10" 
                     Visibility="Collapsed"/>

            <TextBlock Text="Повторите пароль" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="RepeatPasswordBox" 
                         Style="{StaticResource RoundedPasswordBox}" 
                         Margin="0,0,0,10"/>
            <TextBox x:Name="RepeatPasswordTextBox" 
                     Style="{StaticResource RoundedTextBox}" 
                     Margin="0,0,0,10" 
                     Visibility="Collapsed"/>

            <CheckBox x:Name="ShowPasswordCheckBox" 
                      Style="{StaticResource RoundedCheckBox}" 
                      Content="Показать пароль" 
                      Checked="ShowPasswordCheckBox_Checked" 
                      Unchecked="ShowPasswordCheckBox_Unchecked"/>

            <Button Content="Зарегистрироваться" 
                    Style="{StaticResource LargeRoundedButton}" 
                    Background="#6A5ACD" 
                    Foreground="White" 
                    Click="RegisterButton_Click" 
                    Margin="0,20,0,10"/>

            <Button Content="Назад" 
                    Style="{StaticResource LargeRoundedButton}" 
                    Background="#FF4444" 
                    Foreground="White" 
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>