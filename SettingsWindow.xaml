<Page x:Class="WpfApp14.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Настройки"
      Background="#F5EDE4">
    <Page.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <!-- Назад -->
        <Button Content="← Назад"
                Style="{StaticResource RoundedButton}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BackButton_Click"/>

        <!-- Заголовок -->
        <TextBlock Text="Настройки"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#333333"
                   HorizontalAlignment="Center"
                   Margin="0,40,0,0"/>

        <!-- Опции -->
        <StackPanel Margin="0,80,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Звук"
                           FontSize="16"
                           Foreground="#333333"
                           Width="200"/>
                <ToggleButton x:Name="SoundToggle"
                              Width="50"
                              Height="25"
                              Background="#C5C5C5"/>
            </StackPanel>

            <Button Content="Профиль"
                    Style="{StaticResource LargeRoundedButton}"
                    Background="#F0C36A"
                    Foreground="#FFFFFF"
                    BorderThickness="0"
                    Margin="0,0,0,10"
                    Click="ProfileButton_Click"/>

            <Button Content="Поддержка"
                    Style="{StaticResource LargeRoundedButton}"
                    Background="#F0C36A"
                    Foreground="#FFFFFF"
                    BorderThickness="0"
                    Margin="0,0,0,10"
                    Click="SupportButton_Click"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Тема"
                           FontSize="16"
                           Foreground="#333333"
                           Width="200"/>
                <ComboBox x:Name="ThemeSelector"
                          Width="120"
                          Height="30">
                    <ComboBoxItem Content="Светлая"/>
                    <ComboBoxItem Content="Тёмная"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>